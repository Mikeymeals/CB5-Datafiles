  <Features>
    <SpellcastingFeature>
      <Keywords />
      <Name>Spellcasting</Name>
      <Text>As a student of arcane magic, you have a spellbook containing spells that show the first glimmerings of your true power.</Text>
      <Level>1</Level>
      <Hidden>true</Hidden>
      <NoDisplay>false</NoDisplay>
      <Action>Hidden</Action>
      <Prerequisite />
      <Preparation>Spellbook</Preparation>
      <SpellcastingID>WIZARD</SpellcastingID>
      <PrepareableSpells>Wizard and !Cantrip</PrepareableSpells>
      <OverwrittenByMulticlassing>true</OverwrittenByMulticlassing>
      <IgnoreMulticlassing>false</IgnoreMulticlassing>
      <DisplayName>Wizard</DisplayName>
      <PrepareCountAdditionalModifier>None</PrepareCountAdditionalModifier>
      <SpellcastingAbility>Intelligence</SpellcastingAbility>
      <PrepareCountPerClassLevel>0</PrepareCountPerClassLevel>
      <PrepareCountAdditional>0</PrepareCountAdditional>
      <PrepareCount>Max(IntMod + ClassLevel, 1)</PrepareCount>
      <PreparationChange>LongRest</PreparationChange>
    </SpellcastingFeature>
    <SpellChoiceFeature>
