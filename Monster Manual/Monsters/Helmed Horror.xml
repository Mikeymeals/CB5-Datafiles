  <HP>60</HP>
  <HPRoll>8d8+24</HPRoll>
  <Speeds>
    <string>30 ft.</string>
    <string>fly 30 ft.</string>
  </Speeds>
  <Strength>18</Strength>
  <Dexterity>13</Dexterity>
  <Constitution>16</Constitution>
  <Intelligence>10</Intelligence>
  <Wisdom>10</Wisdom>
  <Charisma>10</Charisma>
  <Resistances>
    <string>bludgeoning</string>
    <string>piercing</string>
